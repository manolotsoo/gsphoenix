<div>
  <.simple_form :let={f} for={@changeset} id="article-form" phx-target={@myself} phx-change="validate"
    phx-submit="create_article">
    <.input field={f[:title]} type="text" label="Title" />
    <.input field={f[:body]} type="text" label="Body" />
    <:actions>
      <.button phx-disable-with="Saving...">Add Article</.button>
    </:actions>
  </.simple_form>
</div>